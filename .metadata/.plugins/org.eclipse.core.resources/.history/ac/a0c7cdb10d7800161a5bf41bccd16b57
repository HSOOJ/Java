package triangle;

public class _5_4 {

	public static void main(String[] args) {
		int count = 1;
		for (int i = 0; i < 4; i ++){
			for (int j = 0; j < i + 1; j ++){
				int temp = 0;
				for (int k = 0; k < 3; k ++){
					temp += 3 - k;
				}System.out.print(count + " " + temp);
			}System.out.println( );
		}
		
		}

	}


package triangle;

public class _5_4 {

	public static void main(String[] args) {
		for (int i = 0; i < 4; i ++){
			for (int j = 0; j < i + 1; j ++){
				for (int k = 3; k >= 0; k --){
					System.out.print(i + " ");
					for(int l = 1; l < 3; l ++){
						System.out.print(k + l + " ");
					}
				}System.out.println( );
			}
		}

	}

}
